from sklearn.cluster import KMeans
from sklearn.metrics import silhouette_score

def cluster_data(features_transformed, clusters_config, n_clusters=2, clustering_method='kmeans'):
    """Performs data clustering independently for specified sets of columns.

    Args:
        features_transformed (pandas.DataFrame): Transformed DataFrame with parameters.
        clusters_config (dict or str): If dict, keys are the names for new columns and values are tuples/lists of column names 
            on which to perform clustering independently. If str, clustering is performed on the entire DataFrame and the 
            cluster labels are recorded in a column with that name.
        n_clusters (int): Number of clusters.
        clustering_method (str): Clustering method ('kmeans').

    Returns:
        pandas.DataFrame: DataFrame with added column(s) of cluster labels.
    """
    if features_transformed is None:
        print("Сначала выполните преобразование данных (этап 5).")
        return None

    # If clusters_config is a dictionary, perform clustering for each specified set of columns.
    if isinstance(clusters_config, dict):
        for cluster_name, columns in clusters_config.items():
            features_subset = features_transformed[list(columns)].copy()
            if clustering_method == 'kmeans':
                model = KMeans(n_clusters=n_clusters, random_state=42, n_init=10)
                cluster_labels = model.fit_predict(features_subset)
                
                # Evaluation of clustering quality (using the silhouette coefficient)
                if len(np.unique(cluster_labels)) > 1:  # Ensure that not all points are in one cluster
                    silhouette_avg = silhouette_score(features_subset, cluster_labels)
                    print(f"Cluster '{cluster_name}': Коэффициент силуэта для {n_clusters} кластеров: {silhouette_avg:.4f}")
                else:
                    print(f"Cluster '{cluster_name}': Невозможно рассчитать коэффициент силуэта для {n_clusters} кластера (все точки в одном кластере).")
            else:
                print("Неподдерживаемый метод кластеризации.")
                return None

            features_transformed[cluster_name] = cluster_labels
            print(f"Кластеризация для '{cluster_name}' выполнена. Метки кластеров добавлены в столбец '{cluster_name}'.")
    else:
        # Fallback to original behavior if clusters_config is not a dictionary.
        features_for_clustering = features_transformed.copy()
        if clustering_method == 'kmeans':
            model = KMeans(n_clusters=n_clusters, random_state=42, n_init=10)
            cluster_labels = model.fit_predict(features_for_clustering)
            
            # Evaluation of clustering quality (using the silhouette coefficient)
            if len(np.unique(cluster_labels)) > 1:  # Check that not all points are in one cluster
                silhouette_avg = silhouette_score(features_for_clustering, cluster_labels)
                print(f"Коэффициент силуэта для {n_clusters} кластеров: {silhouette_avg:.4f}")
            else:
                print(f"Невозможно рассчитать коэффициент силуэта для {n_clusters} кластера (все точки в одном кластере).")
        else:
            print("Неподдерживаемый метод кластеризации.")
            return None

        features_transformed[clusters_config] = cluster_labels
        print(f"Кластеризация выполнена. Метки кластеров добавлены в столбец '{clusters_config}'.")

    return features_transformed

# Clustering execution (after step 5 and before step 6)
if 'features_transformed' in locals() and features_transformed is not None:
    # Example usage:
    # To perform clustering on two different sets of columns independently, provide a dictionary mapping.
    # For instance: {'Cluster1': ('column1', 'column2'), 'Cluster2': ('column3',)}
    clusters = {'Cluster1': ('column1', 'column2'), 'Cluster2': ('column3',)}
    n_clusters = 3  # Number of clusters (select the optimal value)
    features_transformed = cluster_data(features_transformed, clusters, n_clusters)
    
    # Visualization of clusters (example for the case when there are 2 numerical features)
    numerical_features = features_transformed.select_dtypes(include=np.number)
    if numerical_features.shape[1] >= 2:
        plt.figure(figsize=(8, 6))
        # For visualization, we use the first clustering result (if multiple exist, adjust accordingly)
        cluster_col = list(clusters.keys())[0]
        plt.scatter(numerical_features.iloc[:, 0], numerical_features.iloc[:, 1], 
                    c=features_transformed[cluster_col], cmap='viridis')
        plt.xlabel(numerical_features.columns[0])
        plt.ylabel(numerical_features.columns[1])
        plt.title('Результаты кластеризации')
        plt.colorbar(label='Номер кластера')
        plt.show()
    else:
        print("Недостаточно числовых признаков для визуализации кластеров на плоскости.")
else:
    print("Сначала выполните этап 5 (Преобразование данных).")