import time
import torch
import numpy as np
from torch.utils.data import DataLoader
from transformers import TrainerCallback, default_data_collator

# Определите класс FactualAccuracyCallbackBETTER (как указано)
class FactualAccuracyCallbackBETTER(TrainerCallback):
    """Обратный вызов для оценки и логирования фактической точности модели во время обучения."""

    def __init__(
        self, model, tokenizer, dataset, batch_size, verbose=False, output_format=False
    ):
        super().__init__()
        self.model = model
        self.tokenizer = tokenizer
        self.n_samp = len(dataset)
        self.verbose = verbose
        self.output_format = output_format
        tokenized_questions = dataset.map(
            lambda examples: tokenizer(
                examples["question"],
                padding="max_length",
                truncation=True,
                max_length=512,
            ),
            batched=True,
        )
        self.batched_tokenized_questions = DataLoader(
            tokenized_questions, batch_size=batch_size, shuffle=False, collate_fn=default_data_collator
        )
        self.batched_expected_answers = DataLoader(dataset['answer'], batch_size=batch_size, shuffle=False)


    def on_log(self, args, state, control, model=None, **kwargs):
        """Вызывается после записи последних логов."""
        if model is not None:
            self.model = model
        elif self.model is None:
            return

        if not state.is_local_process_zero:
            return

        start_time = time.time()
        try:
            with torch.no_grad():
                results = factual_score_dataloader(
                    model=model,
                    tokenizer=self.tokenizer,
                    batched_tokenized_questions=self.batched_tokenized_questions,
                    expected_answers=self.batched_expected_answers,
                    output_format=self.output_format,
                )
                if self.output_format:
                    factual_accuracy_avg, format_hard_avg, format_soft_avg = results
                else:
                    factual_accuracy_avg = results

                if len(state.log_history) > 0:
                    state.log_history[-1]["factual_accuracy"] = factual_accuracy_avg
                    if self.output_format:
                        state.log_history[-1]["format_hard"] = format_hard_avg
                        state.log_history[-1]["format_soft"] = format_soft_avg
        except Exception as e:
            print(f"Error during factual accuracy evaluation: {e}")
        finally:
            time_taken = time.time() - start_time
            if self.verbose:
                print(f"[TIME] {time_taken:.2f} seconds: Model evaluated on FactualAccuracy.")

def check_answer_factual(*args):
    # Placeholder function for factual accuracy check
    # Should return 1 if the answer is factually correct, otherwise 0
    return 1

def check_answer_format(*args, hard=True):
    # Placeholder function for format check
    # Should return 1 if the output format is correct, otherwise 0
    return 1

def factual_score_dataloader(
    model,
    tokenizer,
    batched_tokenized_questions,
    expected_answers,
    max_new_tokens=32,
    output_format=False,
    random_state=42,
    device=None,
    verbose=False,
):
    """
    Evaluate the factual accuracy of answers from a language model.

    Args:
        model: The language model.
        tokenizer: The tokenizer.
        batched_tokenized_questions: The tokenized evaluation dataset loaded in batches.
        expected_answers: The expected answers corresponding to the data batches.
        max_new_tokens: Maximum number of new tokens to generate.
        output_format: Whether to check output format.
        random_state: Random seed for sampling.
        device: Device to run on (defaults to CUDA if available, else CPU).

    Returns:
        If output_format is True:
            A tuple (factual_accuracy_average, format_hard_average, format_soft_average)
        Otherwise:
            factual_accuracy_average
    """

    if device is None:
        device = torch.device("cuda" if torch.cuda.is_available() else "cpu")
    model = model.to(device)
    
    # Initialize running averages and count
    fact_mean = 0
    count = 0
    if output_format:
        format_hard_mean = 0
        format_soft_mean = 0

    for batch, expected_answers in zip(batched_tokenized_questions, expected_answers):
        batch = {k: v.to(device) for k, v in batch.items() if k in ["input_ids", "attention_mask"]}

        with torch.no_grad():
            outputs = model.generate(
                **batch,
                max_new_tokens=max_new_tokens,
                pad_token_id=tokenizer.pad_token_id
            )
            detokenized_inputs = tokenizer.batch_decode(batch["input_ids"], skip_special_tokens=True)
            output_strings = tokenizer.batch_decode(outputs[:, batch["input_ids"].shape[-1]:], skip_special_tokens=True)
            
            # Вычисляем скользящее среднее для фактической точности
            new_results = [check_answer_factual(output_str, expected_answer) 
                           for output_str, expected_answer in zip(output_strings, expected_answers)]
            batch_len = len(new_results)
            fact_mean = (fact_mean * count + sum(new_results)) / (count + batch_len)
            
            if output_format:
                # Вычисляем скользящие средние для проверки форматирования
                hard_results = [check_answer_format(output_str, hard=True) for output_str in output_strings]
                soft_results = [check_answer_format(output_str, hard=False) for output_str in output_strings]
                format_hard_mean = (format_hard_mean * count + sum(hard_results)) / (count + batch_len)
                format_soft_mean = (format_soft_mean * count + sum(soft_results)) / (count + batch_len)
            
            count += batch_len
        
    if output_format:
        return (fact_mean, format_hard_mean, format_soft_mean)
    else:
        return fact_mean