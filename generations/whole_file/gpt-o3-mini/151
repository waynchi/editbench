import numpy as np

# Use the desired input file. Only one path is now defined.
INPUT_FILE_PATH = './example_in.txt'

def main():
    lines = parse_input_file()
    print("Input lines:", lines)
    
    # Remove any empty lines
    lines = [line for line in lines if line.strip()]
    
    # Split each line by whitespace (this handles any amount of spaces)
    # and convert the resulting numbers to integers.
    cols = [line.split() for line in lines]
    cols = np.array(cols, dtype=int).T

    # Extract the two lists from the first two columns
    list_1 = sorted(cols[0])
    list_2 = sorted(cols[1])
    
    # Pair corresponding elements from the sorted lists
    total_dist = sum(abs(a - b) for a, b in zip(list_1, list_2))
    print("Total distance:", total_dist)

def parse_input_file():
    with open(INPUT_FILE_PATH, 'r') as f:
        lines = f.read().splitlines()
    return lines

if __name__ == "__main__":
    main()